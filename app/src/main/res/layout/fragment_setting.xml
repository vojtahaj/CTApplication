<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:text="@string/textView_length_y"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/delay_y"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="0"/>
    <TextView
        android:text="@string/textView_length_g"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/delay_g"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="0"/>
    <Spinner
        android:id="@+id/spinner_sequence"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </Spinner>

    <Button
        android:id="@+id/btn_set_values"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_set_values" />


</LinearLayout>